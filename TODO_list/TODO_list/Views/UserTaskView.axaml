<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TODO_list.Views.UserTaskView">
    <Panel>
        <Grid ColumnDefinitions="47*,17*,12*,12*,12*" VerticalAlignment="Center">
            <TextBlock Foreground="White" Grid.Column="0" Text="{Binding UserTaskDescription}"/>
            <TextBlock Classes="table-style" Foreground="White" Grid.Column="1" Text="{Binding UserTaskCategory}"/>
            <TextBlock Classes="table-style" Foreground="{Binding DifficultyColor}" Grid.Column="2" Text="{Binding UserTaskDifficulty}"/>
            <TextBlock Classes="table-style" Foreground="{Binding DeadlineColor}" Grid.Column="3" Text="{Binding UserTaskDeadline}"/>
            <TextBlock Classes="table-style" Foreground="{Binding StatusColor}" Grid.Column="4" Text="{Binding UserStatus}"/>
        </Grid>
    </Panel>
</UserControl>
